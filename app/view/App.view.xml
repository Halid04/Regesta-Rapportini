<mvc:View
   controllerName="rapportini.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:l="sap.ui.layout" >

   <FlexBox
   height="50vh"
   width="100vw"
   alignItems="Center"
   justifyContent="Center"
   direction="Column">
      <FlexBox
      height="50Vh"
      width="90vw"
      alignItems="Center"
      justifyContent="Center">
         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Utente" labelFor="inputText" />
            <Input
            id="inputText"
            value="{/rapportini/utente}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Giorno" labelFor="inputText2" />
            <Input
            id="inputText2"
            type="Date"
            value="{/rapportini/giorno}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Ore" labelFor="inputText3" />
            <StepInput
						value="{/rapportini/ore}"
						displayValuePrecision="{displayValuePrecision}"
						min="0"
						max="15"
						width="2rem"/>
         </FlexBox>

      </FlexBox>

      <FlexBox
      height="50Vh"
      width="90vw"
      alignItems="Center"
      justifyContent="Center">

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Orario notturno" labelFor="inputText4" />
            <CheckBox selected="{/rapportini/orarioNotturno}"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Ticket" labelFor="inputText5" />
            <ComboBox value="{/rapportini/ticket}"></ComboBox>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Cliente" labelFor="inputText6" />
            <ComboBox value="{/rapportini/cliente}"></ComboBox>
         </FlexBox>

      </FlexBox>

      <FlexBox
      height="50Vh"
      width="90vw"
      alignItems="Center"
      justifyContent="Center">
         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Commessa" labelFor="inputText7" />
            <ComboBox value="{/rapportini/commessa}"></ComboBox>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Descrizione" labelFor="inputText8" />
            <Input
            id="inputText8"
            value="{/rapportini/descrizione}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Sede" labelFor="inputText9" />
            <ComboBox value="{/rapportini/sede}"></ComboBox>
         </FlexBox>

      </FlexBox>

      <FlexBox
      height="50Vh"
      width="90vw"
      alignItems="Center"
      justifyContent="Center">
         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Destinazione" labelFor="inputText10" />
            <ComboBox value="{/rapportini/destinazione}"></ComboBox>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Km" labelFor="inputText11" />
            <Input
            id="inputText11"
            type="Number"
            value="{/rapportini/km}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="KmEuro" labelFor="inputText12" />
            <Input
            id="inputText12"
            type="Number"
            value="{/rapportini/kmEuro}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

      </FlexBox>

      <FlexBox
      height="50Vh"
      width="90vw"
      alignItems="Center"
      justifyContent="Center">
         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Pedaggio" labelFor="inputText13" />
            <Input
            id="inputText13"
            type="Number"
            value="{/rapportini/pedaggio}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Noleggio" labelFor="inputText14" />
            <Input
            id="inputText14"
            type="Number"
            value="{/rapportini/noleggio}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Trasporti" labelFor="inputText15" />
            <Input
            id="inputText15"
            type="Number"
            value="{/rapportini/trasporti}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

      </FlexBox>

      <FlexBox
      height="50Vh"
      width="90vw"
      alignItems="Center"
      justifyContent="Center">
         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Alloggio" labelFor="inputText16" />
            <Input
            id="inputText16"
            type="Number"
            value="{/rapportini/alloggio}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Forfait" labelFor="inputText17" />
            <Input
            id="inputText17"
            type="Number"
            value="{/rapportini/forfait}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Vitto" labelFor="inputText18" />
            <Input
            id="inputText18"
            type="Number"
            value="{/rapportini/vitto}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

      </FlexBox>

      <FlexBox
      height="50Vh"
      width="90vw"
      alignItems="Center"
      justifyContent="Center">
         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Varie" labelFor="inputText19" />
            <Input
            id="inputText19"
            type="Number"
            value="{/rapportini/varie}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Riservato" labelFor="inputText20" />
            <Input
            id="inputText20"
            type="Number"
            value="{/rapportini/riservato}"
            valueLiveUpdate="true"
            placeholder=""
            width="15rem"/>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Plus" labelFor="inputText21" />
            <CheckBox selected="{/rapportini/plus}" />
         </FlexBox> 
      </FlexBox>

      <FlexBox
      height="50Vh"
      width="90vw"
      alignItems="Center"
      justifyContent="Center">
         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Fatturabile" labelFor="inputText22" />
            <CheckBox selected="{/rapportini/fatturabile}" />
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Docente" labelFor="inputText23" />
            <ComboBox value="{/rapportini/docente}"></ComboBox>
         </FlexBox>

         <FlexBox
         height="20Vh"
         width="35vw"
         alignItems="Start"
         justifyContent="Center"
         direction="Column">
            <Label text="Corso" labelFor="inputText24" />
            <ComboBox value="{/rapportini/corso}"></ComboBox>
         </FlexBox>
      </FlexBox>
         <FlexBox
         height="10Vh"
         width="100vw"
         alignItems="Center"
         justifyContent="Center">
            <Button 
            text="Add" 
            press=".onPostRapportini"
            icon="sap-icon://add" />

            <Button 
            text="Show" 
            press="onPress"
            icon="sap-icon://show" />

         </FlexBox>
   </FlexBox>

</mvc:View>